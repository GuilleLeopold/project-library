<section class="books-section">
  <header class="helper-header">
    <h2 class="table-title">Books on my shelf </h2>
  </header>
  <table class="books-table" id="user-books">
    <% current_user.requests.all.each do |request| %>
    	<tr>
        <td class="book-column column-date"><%=   request.request_date  %></td>
    		<td class="book-column column-title"><%=link_to request.book.title, request.book %></td>
    		<td class="book-column column-author"><%= request.book.author.name + " " + request.book.author.last_name %></td>
    		<td class="book-column column-status" id="request-status"><%=   request.status  %></td>
    	</tr>
    <% end %>
  </table>
</section>
